/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running mouse test
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

params {
    // Test parameters
    organism            = 'mus_musculus'
    census_version      = '2024-07-01'
    seed                = 42
    cutoff              = 0
    subsample_ref       = 500
    subsample_query     = 100
    ref_split           = 'dataset_id'
    normalization_method = 'SCT'
    subset_type         = 'sample'
    batch_correct       = true
    use_gap             = false
    remove_unknown      = true

    // Reference collections
    ref_collections     = [
        'A taxonomy of transcriptomic cell types across the isocortex and hippocampal formation',
        'An integrated transcriptomic and epigenomic atlas of mouse primary motor cortex cell types',
        'Tabula Muris Senis'
    ]
    ref_keys            = ['subclass', 'class', 'family', 'global']

    // Input paths
    queries_adata       = '/space/grp/rschwartz/rschwartz/get_gemma_data.nf/study_names_mouse.txt_author_true_process_samples_true/h5ad/**h5ad'
    relabel_q           = '/space/grp/rschwartz/rschwartz/nextflow_eval_pipeline/meta/relabel_mus_musculus/*_relabel.tsv'
    relabel_r           = '/space/grp/rschwartz/rschwartz/nextflow_eval_pipeline/meta/census_map_mouse_author.tsv'

    // Output
    outdir_prefix       = 'mmus_test'
}
