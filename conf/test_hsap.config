/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running human test
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

params {
    // Test parameters
    organism            = 'homo_sapiens'
    census_version      = '2024-07-01'
    seed                = 42
    cutoff              = 0
    subsample_ref       = 500
    subsample_query     = 100
    ref_split           = 'dataset_id'
    normalization_method = 'SCT'
    subset_type         = 'sample'
    batch_correct       = true
    use_gap             = false
    remove_unknown      = true

    // Reference collections
    ref_collections     = [
        'Transcriptomic cytoarchitecture reveals principles of human neocortex organization',
        'SEA-AD: Seattle Alzheimer\'s Disease Brain Cell Atlas'
    ]
    ref_keys            = ['subclass', 'class', 'family', 'global']

    // Input paths
    queries_adata       = '/space/grp/rschwartz/rschwartz/evaluation_data_wrangling/pipeline_queries_hsap/sample_subsets/*h5ad'
    relabel_q           = '/space/grp/rschwartz/rschwartz/nextflow_eval_pipeline/meta/relabel_homo_sapiens/*_relabel.tsv'
    relabel_r           = '/space/grp/rschwartz/rschwartz/nextflow_eval_pipeline/meta/census_map_human.tsv'

    // Output
    outdir_prefix       = 'hsap_test'
}
